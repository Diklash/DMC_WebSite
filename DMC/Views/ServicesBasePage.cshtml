@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ServicesPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "InnerPage.cshtml";

    var selection = CurrentPage.Children;

    int i = 0;

    bool closed = false;

}

@if (selection.Any())
{
    <section class="services-section">
        <div class="container">
            <div class="services-box">
                @foreach (var item in selection)
                {
                    i = i + 1;

                    if (i == 1)
                    {
                        closed = false;
                        @:<div class="row">
                    }

                    <div class="col-md-6">
                        <div class="services-post">
                            <img src="@Umbraco.Media(item.Image1).url" alt="">
                            <div class="services-content">
                                <h2>@item.Title</h2>
                                <p>@item.Description1</p>
                                <a href="@item.Url">Read More <i class="fa fa-angle-right"></i></a>
                            </div>
                        </div>
                    </div>

                    if (i == 2)
                    {
                        closed = true;
                        i = 0;
                        @:</div>
                    }
                }
            </div>
        </div>
    </section>

    if (!closed)
    {
        @:</div>
    }
}



